<%include partials/_header%>

<div class="container">
  <div class="row">
    <!--Form-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="POST">
            <div class="form-group">
              <input type="text" name="title" placeholder="Ingresar el título" class="form-control">
            </div>
            <div class="form-group">
              <textarea name="description" cols="50" class="form-control" placeholder="Ingresar la descripción"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Add</button>
          </form>
        </div>
      </div>
    </div>
    <!--List-->
    <div class="col-md-7">
      <table class="table table-bordered table-hover table-sm">
        <thead>
          <th>N°</th>
          <th>Title</th>
          <th>Description</th>
          <th>Operation</th>
        </thead>
        <tbody>
          <%for(let i = 0;i<tasks.length;i++){%>
          <tr>
            <td><%=i+1%></td>
            <td><%=tasks[i].title%></td>
            <td><%=tasks[i].description%></td>
            <td>
              <a href="/turn/<%=tasks[i]._id%>" class="btn <%=tasks[i].status ? 'btn-success' : 'btn-dark'%> btn-sm">Done</a>
              <a href="/delete/<%=tasks[i]._id%>" class="btn btn-danger btn-sm">Delete</a>
              <a href="/edit/<%=tasks[i]._id%>" class="btn btn-info btn-sm">Update</a>
            </td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%include partials/_footer%>